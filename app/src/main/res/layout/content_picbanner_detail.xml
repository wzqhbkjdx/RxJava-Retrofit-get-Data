<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/picture_detail_page"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.5"/>

    <RelativeLayout
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5">

        <TextView
            android:background="#000000"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:padding="5dp"
            android:text="this is the title of pictures"
            android:id="@+id/tv_pic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:background="#000000"
            android:textColor="#ffffff"
            android:id="@+id/tv_pic_count"
            android:layout_alignBottom="@id/tv_pic_title"
            android:layout_alignParentRight="true"
            android:text="1/5"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ScrollView
            android:background="#000000"
            android:layout_below="@id/tv_pic_title"
            android:id="@+id/sv_pic_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">
            <TextView
                android:textColor="#ffffff"
                android:padding="5dp"
                android:text="this is the content of pictures"
                android:id="@+id/tv_pic_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </ScrollView>

    </RelativeLayout>



</LinearLayout>