<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_circle_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:background="@drawable/view_shadow"
            android:orientation="vertical"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left"
                    android:orientation="horizontal">

                    <com.cgtrc.wzq.cgtcplatform.widgets.CircularImage
                        android:id="@+id/headIv"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginRight="10dip"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/ic_launcher"
                        />

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/user_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/item_title_textsize"
                        android:text="User"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/iwantMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_category"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="技术交流"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  "
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />

                    <View
                        android:layout_gravity="center_vertical"
                        android:background="@color/darker_gray"
                        android:layout_width="1.5dp"
                        android:layout_height="14dp"/>

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  "
                        android:textColor="@color/text_primary"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_pubDate"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/darker_gray"
                        android:textSize="14sp"
                        android:text="2016-05-01"
                        />

                </LinearLayout>


            </RelativeLayout>

            <View
                android:background="@color/lighter_gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/tv_cicle_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="?attr/selectableItemBackground"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/item_text_textsize"
                android:textStyle="bold"
                android:text="this is the title"
                />

            <TextView
                android:id="@+id/tv_circle_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="?attr/selectableItemBackground"
                android:textSize="14sp"
                android:text="this is the description"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_content1"
                    android:visibility="visible"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />

                <ImageView
                    android:id="@+id/iv_content2"
                    android:visibility="visible"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />

                <ImageView
                    android:id="@+id/iv_content3"
                    android:visibility="visible"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />

            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:background="@color/lighter_gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/starBtn"
                    android:src="@drawable/star_white"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
                <ImageView
                    android:layout_marginLeft="3dp"
                    android:id="@+id/priceBtn"
                    android:src="@drawable/new_thumb_white"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
                <TextView
                    android:id="@+id/price_count"
                    android:gravity="center_vertical"
                    android:text="20"
                    android:layout_marginLeft="3dp"
                    android:layout_width="30sp"
                    android:layout_height="30sp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/iv_share"
                    android:src="@drawable/share"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

                <ImageView
                    android:layout_marginLeft="3dp"
                    android:id="@+id/iv_comment"
                    android:src="@drawable/message_black"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
                <TextView
                    android:id="@+id/comment_count"
                    android:gravity="center_vertical"
                    android:text="15"
                    android:layout_marginLeft="3dp"
                    android:layout_width="30sp"
                    android:layout_height="30sp" />

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</FrameLayout>